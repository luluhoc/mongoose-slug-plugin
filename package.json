{
  "name": "mongoose-slug-plugin",
  "description": "Slugs for Mongoose with history and i18n support (uses speakingurl by default, but you can use any slug library such as limax, slugify, mollusc, or slugme)",
  "version": "2.0.1",
  "author": "Nick Baugh <niftylettuce@gmail.com> (http://niftylettuce.com/)",
  "ava": {
    "failFast": true,
    "verbose": true
  },
  "bugs": {
    "url": "https://github.com/ladjs/mongoose-slug-plugin/issues",
    "email": "niftylettuce@gmail.com"
  },
  "commitlint": {
    "extends": [
      "@commitlint/config-conventional"
    ]
  },
  "contributors": [
    "Nick Baugh <niftylettuce@gmail.com> (http://niftylettuce.com/)"
  ],
  "dependencies": {
    "is-string-and-not-blank": "^0.0.2",
    "lodash": "^4.17.15",
    "speakingurl": "^14.0.1"
  },
  "devDependencies": {
    "@commitlint/cli": "^8.2.0",
    "@commitlint/config-conventional": "^8.2.0",
    "ava": "^2.4.0",
    "codecov": "^3.6.1",
    "cross-env": "^6.0.3",
    "dayjs": "^1.8.16",
    "eslint": "^6.5.1",
    "eslint-config-xo-lass": "^1.0.3",
    "fixpack": "^2.3.1",
    "husky": "^3.0.8",
    "lint-staged": "^9.4.2",
    "mongoose": "^5.6.11",
    "nyc": "^15.1.0",
    "remark-cli": "^7.0.0",
    "remark-preset-github": "^0.0.16",
    "xo": "^0.25.3"
  },
  "engines": {
    "node": ">=8.3"
  },
  "homepage": "https://github.com/ladjs/mongoose-slug-plugin",
  "husky": {
    "hooks": {
      "pre-commit": "lint-staged && npm test",
      "commit-msg": "commitlint -E HUSKY_GIT_PARAMS"
    }
  },
  "keywords": [
    "301",
    "302",
    "blog",
    "boom",
    "dashed",
    "dasherize",
    "dashes",
    "express",
    "generator",
    "get",
    "history",
    "hyphenize",
    "hyphens",
    "koa",
    "lad",
    "limax",
    "lodash",
    "me",
    "mollusc",
    "mongo",
    "mongodb",
    "mongoose",
    "mongoosejs",
    "plugin",
    "post",
    "preserve",
    "redirect",
    "redirection",
    "seo",
    "slug",
    "slugify",
    "slugme",
    "slugme",
    "slugs",
    "speaking",
    "speakingurl",
    "str",
    "string",
    "template",
    "tmpl",
    "unique",
    "url",
    "urls"
  ],
  "license": "MIT",
  "lint-staged": {
    "*.js": [
      "xo --fix",
      "git add"
    ],
    "*.md": [
      "remark . -qfo",
      "git add"
    ],
    "package.json": [
      "fixpack",
      "git add"
    ]
  },
  "main": "index.js",
  "peerDependencies": {
    "mongoose": ">=5.7"
  },
  "prettier": {
    "singleQuote": true,
    "bracketSpacing": true,
    "trailingComma": "none"
  },
  "remarkConfig": {
    "plugins": [
      "preset-github"
    ]
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/ladjs/mongoose-slug-plugin"
  },
  "scripts": {
    "coverage": "nyc report --reporter=text-lcov > coverage.lcov && codecov",
    "lint": "xo && remark . -qfo",
    "pretest": "mongo mongoose_slug_plugin --eval 'db.dropDatabase();'",
    "test": "npm run lint && npm run test-coverage",
    "test-coverage": "cross-env NODE_ENV=test nyc ava"
  },
  "xo": {
    "prettier": true,
    "space": true,
    "extends": [
      "xo-lass"
    ]
  }
}
